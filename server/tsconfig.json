{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "module": "esnext",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": false,
    "rootDir": ".",
    "outDir": "../build",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./**/*.ts"]
}
